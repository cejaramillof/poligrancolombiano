%tr
  %td.col-xs-5.col-sm-5.col-sm-offset-2
    = f.input :name, label: false, input_html: { class: 'form-control' }, placeholder: 'Comida #'
  %td.col-xs-12.col-sm-4
    = f.input :hour, label: false, :as => :time, minute_step: 5, input_html: { class: 'form-control form-control-inline input-sm', style: 'margin-top: 15px;margin-bottom: 15px;'  }
  %td.col-xs-12.col-sm-1
    = f.input_field :_destroy, as: :hidden
